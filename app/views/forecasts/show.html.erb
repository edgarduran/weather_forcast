<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-xl shadow">
  <h2 class="text-2xl font-bold mb-2 text-center"><%= @forecast&[:location] %></h2>
  <p class="text-center text-gray-600 capitalize mb-4"><%= @forecast&[:description] %></p>

  <div class="text-center text-3xl font-semibold mb-2">
    <%= @forecast&[:temp] %>°F
  </div>

  <p class="text-center text-gray-700">
    High: <%= @forecast&[:temp_max] %>°F &nbsp; | &nbsp;
    Low: <%= @forecast&[:temp_min] %>°F
  </p>

  <% if @from_cache %>
    <p class="text-green-600 text-sm mt-3 text-center">(Loaded from cache)</p>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "Back", root_path, class: "text-blue-600 underline" %>
  </div>
</div>