<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-sky-100 via-blue-50 to-white py-8 px-4">
  <div class="max-w-sm w-full bg-white rounded-2xl shadow-lg border border-slate-200 p-8 text-center">
    <h2 class="text-3xl font-bold text-slate-800 mb-2">
      <%= @forecast[:location] || "Unknown Location" %>
    </h2>

    <p class="text-gray-600 capitalize mb-6 text-lg tracking-wide">
      <%= @forecast[:description] %>
    </p>

    <div class="flex flex-col items-center mb-6">
      <p class="text-6xl font-extrabold text-slate-900 leading-none mb-2">
        <%= @forecast[:temp].round %>°
      </p>
      <p class="text-lg text-slate-600 font-medium">Fahrenheit</p>
    </div>

    <div class="text-sm text-slate-700 font-medium mb-2">
      High: <span class="text-slate-900 font-semibold"><%= @forecast[:temp_max].round %>°F</span>
      &nbsp;|&nbsp;
      Low: <span class="text-slate-900 font-semibold"><%= @forecast[:temp_min].round %>°F</span>
    </div>

    <% if @from_cache %>
      <p class="text-green-600 text-sm mt-3 text-center">(Loaded from cache)</p>
    <% end %>

    <div class="mt-8">
      <%= link_to "Search Again", root_path,
          class: "inline-block bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold px-6 py-2.5 rounded-lg shadow-sm transition-all duration-200 focus:ring-2 focus:ring-blue-400" %>
    </div>
  </div>
</div>
